<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo01.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/editTextDataToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/data_to_send" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonNavigateSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextDataToSend"
        android:layout_below="@+id/editTextDataToSend"
        android:layout_marginTop="16dp"
        android:text="Navigation Simple" 
        android:onClick="navigateSimple"/>
    <Button
        android:id="@+id/buttonNavigateComplex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonNavigateSimple"
        android:layout_below="@+id/buttonNavigateSimple"
        android:layout_marginTop="14dp"
        android:text="Navigation Complex"
        />
    <!-- 
    programmatically set!
    android:onClick="navigateComplex"
     -->
    
</RelativeLayout>

